<?xml version="1.0" encoding="UTF-8"?>

<component-set>
    <components>
        <!--
         | MAVEN PLUGIN
         |-->
        <component>
            <role>org.apache.maven.artifact.handler.ArtifactHandler</role>
            <role-hint>pano</role-hint>
            <implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
            <configuration>
                <type>pano</type>
                <extension>zip</extension>
                <language>java</language>
                <addedToClasspath>false</addedToClasspath>
            </configuration>
        </component>

        <!--
          | Defining the phases with their appropriate plugins
          ! and versions which will be executed during the 'default'
          ! life cycle.
        -->
        <!--
         | MAVEN PLUGIN
         |-->
        <component>
            <role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
            <role-hint>pano</role-hint>
            <implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
            <configuration>
                <lifecycles>
                    <lifecycle>
                        <id>default</id>
                        <!-- START SNIPPET: maven-plugin-lifecycle -->
                        <phases>
                            <compile>
                                de.zebrajaeger:sphere2cube-maven-plugin:0.0.1-SNAPSHOT:pannellum
                            </compile>
                            <install>
                                org.apache.maven.plugins:maven-install-plugin:3.0.0-M1:install
                            </install>
                            <deploy>
                                org.apache.maven.plugins:maven-deploy-plugin:3.0.0-M1:deploy
                            </deploy>
                        </phases>
                        <!-- END SNIPPET: maven-plugin-lifecycle -->
                    </lifecycle>
                </lifecycles>
            </configuration>
        </component>

    </components>
</component-set>
